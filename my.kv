#:kivy 1.11.1

<StyledButton@Button>:
    canvas: 
        Color: 
            rgba: 0,0,0, 1
        Line: 
            width: .5
            rectangle: (self.x, self.y, self.width, self.height) 
    background_normal: ''
    background_color: 48/255.,48/255.,48/255.,1.
    font_name: 'Roboto'            
    on_press: 
        self.background_color= (173/255. , 216/255. , 230/255.,1)
    on_release:
        self.background_color= (48/255.,48/255.,48/255.,1.)

<ImageButton@Button>:
    canvas: 
        Color: 
            rgba: 0,0,0, 1
        Line: 
            width: .6
            rectangle: (self.x, self.y, self.width, self.height) 
    background_normal: ''
    background_color: 48/255.,48/255.,48/255.,1.
    border: 0,0,0,0
    on_press: 
        self.background_color= (173/255. , 216/255. , 230/255.,1)
    on_release:
        self.background_color= (48/255.,48/255.,48/255.,1.)

<StyledLabel@Label>:    
    canvas.before:
        Color:
            rgba: 48/255. , 48/255. , 48/255., 1
        Rectangle:
            size: self.size
            pos: self.pos

<StyledSpinner@Spinner>:
    canvas: 
        Color: 
            rgba: 0,0,0, 1
        Line: 
            width: .5
            rectangle: (self.x, self.y, self.width, self.height) 
    background_normal: ''
    background_color: 70/255. , 70/255. , 70/255.,1
    canvas.before:
        Color:
            rgba: 70/255. , 70/255. , 70/255., 1
        Rectangle:
            size: self.size
            pos: self.pos

    
<StyledCheckBox@CheckBox>: 
    background_normal: ''
    background_color: 48/255. , 48/255. , 48/255.,1
    canvas.before:
        Color:
            rgba: 48/255. , 48/255. , 48/255., 1
        Rectangle:
            size: self.size
            pos: self.pos

<StyledSlider@Slider>:
    background_normal: ''
    background_color: 48/255. , 48/255. , 48/255.,1
    canvas.before:
        Color:
            rgba: 48/255. , 48/255. , 48/255., 1
        Rectangle:
            size: self.size
            pos: self.pos


